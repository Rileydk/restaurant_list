{{!-- 為什麼種子資料的編輯頁可以置中，新增的資料卻會展填滿？ --}}

<h1 class="mb-1 show-title">編輯餐廳資料</h1>

<div class="edit-form-container d-flex justify-content-center">
  <form action="/restaurants/{{ restaurant._id}}/edit?_method=PUT" method="POST">

    <div class="form-row mb-3">

      <div class="form-group col-md-6">
        <label for="name">餐廳名稱 Name
          <span class="required-column">*</span>
        </label>
        <input type="text" class="form-control" id="name" name="name" value="{{ restaurant.name }}" required autofocus>
      </div>

      <div class="form-group col-md-6">
        <label for="english-name">餐廳英文名稱 English Name</label>
        <input type="text" class="form-control" id="english-name" name="name_en" value="{{ restaurant.name_en }}">
      </div>

    </div>

    <div class=" form-row mb-3">

      <div class="form-group col-md-4">
        <label for="category">類別 Category</label>
        <input type="text" class="form-control" id="category" name="category" value="{{ restaurant.category }}">
      </div>

      <div class=" form-group col-md-3">
        <label for="rating">評分 Rating</label>
        <input type="number" class="form-control" id="rating" name="rating" step="0.1" min="1" max="5"
          value="{{ restaurant.rating }}">
      </div>

      <div class=" form-group col-md-5">
        <label for="phone">電話 Phone</label>
        <input type="text" class="form-control" id="phone" name="phone" value="{{ restaurant.phone }}">
      </div>

    </div>

    <div class="form-group mb-3">
      <label for="image">圖片 Image</label>
      <input type="url" class="form-control" id="image" name="image" placeholder="貼上圖片連結 Paste URL in here"
        value="{{ restaurant.image }}">
      {{#if restaurant.image}}
        <img class="mt-3" id="edit-restaurant-image" src="{{ restaurant.image }}" alt="restaurant-image">
      {{/if}}
    </div>

    <div class="form-group mb-3">
      <label for="location">位置 Location</label>
      <input type="text" class="form-control" id="location" name="location" value="{{ restaurant.location }}">
    </div>

    <div class="form-group mb-3">
      <label for="google-map">Google地圖 Google Map</label>
      <input type="url" class="form-control" id="google-map" name="google_map"
        placeholder="貼上google地圖連結 Paste google map URL here" value="{{ restaurant.google_map }}">
    </div>

    <div class="form-group mb-3">
      <label for="description">簡介 Description</label><br>
      <textarea name="description" id="description" cols="30" rows="10">{{ restaurant.description }}</textarea>
    </div>

    <button type="submit" class="submit-btn btn mt-4">Save</button>
  </form>
</div>
